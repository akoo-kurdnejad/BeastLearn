@using BeastLearn.Application.Convertors
@using BeastLearn.Application.ViewModels.Users

@{
    ViewData["Title"] = "کیف پول شما";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">بست لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">کیف پول شما </li>
        </ul>
    </nav>
</div>

<div class="container">
    <div class="user-account">
        <div class="row">
            <partial name="_Sidbar" />
            <div class="col-md-9 col-sm-8 col-xs-12">
                <section class="user-account-content">

                    <section class="user-account-content">

                        <br />
                        <header>
                            <div class="alert alert-info"><h4 class="text-center">موجودی کیف پول شما : @ViewBag.Wallet</h4></div>
                        </header>
                        <br />
                        <div class="col-md-7 col-sm-8 col-xs-12">

                            <a href="/UserPanel/ChargWallet" class="btn btn-success" style="color:white">شارژ حساب</a>

                        </div>
                        <div class="inner form-layer">

                           
                            <hr />
                            @{
                                List<WalletViewModel> list = ViewBag.ListWallet as List<WalletViewModel>;
                            }

                            <table class="table table-bordered table-striped table-hover">
                                <tr>
                                    <th>مبلغ</th>
                                    <th>تاریخ</th>
                                    <th>نوع تراکنش</th>
                                    <th>شرح</th>
                                </tr>
                                @foreach (var item in list)
                                {
                                    <tr>
                                        <td>@item.Amount.ToString("#,0 تومان")</td>
                                        <td>
                                            @item.DateTime.ToStringShamsiDate()
                                        </td>
                                        <td>
                                            @if (item.Type == 1)
                                            {
                                                <p class="text-success">واریز به حساب</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">برداشت از حساب</p>
                                            }
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>


                    </section>

                </section>
            </div>
        </div>
    </div>
</div>

