
@model BeastLearn.Application.ViewModels.Users.ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییز کلمه عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">بست لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> تغییر کلمه عبور </li>
        </ul>
    </nav>
</div>

<div class="container">
    <div class="user-account">
        <div class="row">
            <partial name="_Sidbar" />
            <div class="col-md-9 col-sm-8 col-xs-12">
                <section class="user-account-content">

                    <section class="user-account-content">
                        <header><h1> تغییر کلمه عبور </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="ChangePassword" method="post">
                                @if (ViewBag.IsSuccess != null)
                                {
                                    <div class="alert alert-success text-center">
                                        <h2>تغییر کلمه عبور شما با موفقیت انجام شد.</h2>
                                    </div>
                                }


                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                            <input type="password" asp-for="OldPassword" class="form-control" placeholder="کلمه عبور فعلی " aria-describedby="password">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="کلمه عبور جدید " aria-describedby="password">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                            <input type="password" asp-for="RePassword" class="form-control" placeholder="تکرار کلمه عبور جدید " aria-describedby="password">
                                        </div>
                                    </div>
                                    <div class="text-danger" asp-validation-summary="All"></div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> تغییر کلمه عبور </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>

                </section>
            </div>
        </div>
    </div>
</div>
