@using BeastLearn.Application.Convertors
@model IEnumerable<BeastLearn.Domain.Models.Order.Order>
@{
    ViewData["Title"] = "فاکتورهای شما";
}



<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> نمایش فاکتور ها </li>
        </ul>
    </nav>
</div>

<div class="container">
    <div class="user-account">
        <div class="row">
            <partial name="_Sidbar" />
            <div class="col-md-9 col-sm-8 col-xs-12">
                <section class="user-account-content">

                    <section class="user-account-content">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                لیست فاکتور ها
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="container">
                                    </div>
                                </div>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                                    </div>
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                        <thead>
                                            <tr role="row">
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    شماره فاکتور
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    تاریخ
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    جمع فاکتور
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    پرداخت
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    دستورات
                                                </th>

                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr class="gradeA odd">

                                                    <td class=" ">@item.OrderId</td>
                                                    <td class=" "> @item.CreateDate.ToStringShamsiDate()</td>
                                                    <td class="center ">@item.OrderSum</td>

                                                    <td>
                                                        @if (item.IsFinaly)
                                                        {
                                                            <p class="text-success">
                                                              
                                                                پرداخت شده
                                                            </p>
                                                        }
                                                        else
                                                        {
                                                            <p class="text-danger">
                                                                پرداخت نشده

                                                            </p>
                                                        }
                                                    </td>

                                                    <td>
                                                        <a class="btn btn-info" href="/UserPanel/MyOrder/ShowOrder/@item.OrderId">جزییات</a>
                                                    </td>
                                                </tr>
                                            }



                                        </tbody>
                                    </table>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </section>

                </section>
            </div>
        </div>
    </div>
</div>
