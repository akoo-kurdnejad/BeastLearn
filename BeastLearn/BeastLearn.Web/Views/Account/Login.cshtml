@model BeastLearn.Application.ViewModels.Users.LoginViewModel

@{
    ViewData["Title"] = "ورود به سایت";
}


<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">بست لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">
        <header><h2> ورود به سایت </h2></header>
        <div class="form-layer">
            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl "/>
                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="text" asp-for="Email" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email"></span>
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password"></span>
                <div class="remember-me">
                    <label><input type="checkbox" asp-for="RememberMe" name="">  مرا بخاطر بسپار </label>
                </div>
                <div class="link">
                    <a href="/ForgotPassword"> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a href="/Register"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>

                <button class="btn btn-success"> ورود به سایت </button>
            </form>
        </div>
    </div>
</main>