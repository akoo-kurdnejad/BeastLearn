@{
    ViewData["Title"] = "فعالسازی حساب کاربری";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">بست لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">فعالسازی حساب کاربری</li>
    </ul>
</nav>

<div class="container">
    @if (ViewBag.IsActive)
    {
        <div class="alert alert-success text-center text-primary ">
            <h1>حساب کاربری شما با موفقیت فعال شد</h1>
            <h3>
                <a class="btn-link" href="/Login">ورود به سایت</a>
            </h3>
        </div>
    }
    else
    {
        <div class="alert alert-danger text-center text-primary">
            <h2>حساب کاربری با مشخصات ارسال شده یافت نشد</h2>
        </div>
    }
</div>