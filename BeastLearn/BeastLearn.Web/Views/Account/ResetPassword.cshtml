
@model BeastLearn.Application.ViewModels.Users.ResetPasswordViewModel

@{
    ViewData["Title"] = "تغییر کلمه عبور";
}


<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">بست لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">تغییر کلمه عبور</li>
    </ul>
</nav>


<main class="client-page">
    <div class="container-content">
        <header><h2> تغییر کلمه عبور </h2></header>
        <div class="form-layer">
            <form asp-action="ResetPassword" method="post">

                <input type="hidden" asp-for="ActiveCode" />
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور " aria-describedby="password">
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرارکلمه عبور" aria-describedby="password">
                </div>
                <div asp-validation-summary="All" class="text-danger">

                </div>
                <div class="link">

                    <a href="/Login"> <i class="zmdi zmdi-account"></i> ورود به سایت </a>
                </div>

                <button class="btn btn-success"> تغییر کلمه عبور </button>
            </form>
        </div>
    </div>
</main>





