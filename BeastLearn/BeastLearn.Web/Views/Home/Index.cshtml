@using BeastLearn.Application.ViewModels.Courses
@model IEnumerable<BeastLearn.Application.ViewModels.Courses.ShowCourseViewModel>
@{
    ViewData["Title"] = "خانه";
    List<ShowCourseViewModel> BestCourse = ViewBag.Papular as List<ShowCourseViewModel>;
}

@section SearchBox
    {
    <header>
        @*<a href="" class="logo"><img src="/images/logo.png"></a>*@
        <h1> با اساتید مجرب و کارآزموده در خودآموز بست لرن </h1>
        <h2> آموزش ببینید ، تجربه کسب کنید و بازار کار شوید </h2>
        <h3> با کمترین هزینه خودت یاد بگیر </h3>
    </header>
    <div class="search-form">
        <form action="/Course" method="get">
            <input type="text" name="filter" id="autoFilter" placeholder="چی دوست داری یاد بگیری ؟">
            <button><i class="zmdi zmdi-search"></i></button>
        </form>
    </div>
}
<main id="home-page">
    <div class="container">
        <section class="terms-items">
            <header>
                <h2> آخرین دوره های بست لرن </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                @foreach (var item in Model)
                {
                    <partial name="_BoxCourse" model="@item" />
                }

            </div>
        </section>

        <hr>

        <section class="terms-items">
            <header>
                <h2> دوره های محبوب تاپ لرن </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                @if (BestCourse.Any())
                {
                    foreach (var item in BestCourse)
                    {
                        <partial name="_BoxCourse" model="@item" />
                    }
                }
            </div>
        </section>
    </div>
</main>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#autoFilter").autocomplete({
                source: 'api/courseapi/search'
            });
        });
    </script>
}
