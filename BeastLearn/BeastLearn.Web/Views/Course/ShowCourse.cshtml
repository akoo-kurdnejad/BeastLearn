@using BeastLearn.Application.Convertors
@using BeastLearn.Application.Interfaces
@model BeastLearn.Domain.Models.Course.Course

@inject IOrderService _OrderService;
@{
    ViewData["Title"] = Model.CourseTitle;

    bool IsUserCourse = false;
    if (User.Identity.IsAuthenticated)
    {
        IsUserCourse = _OrderService.IsUserInCourse(User.Identity.Name, Model.CourseId);
    }
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">بست لرن</a></li>
            <li class="breadcrumb-item active"><a href="#">آرشیو دوره ها</a></li>
            <li class="breadcrumb-item active" aria-current="page"> برنامه نویسی  </li>
        </ul>
    </nav>
</div>
<div class="container">
    <section class="term-content">
        <header><h1> @Model.CourseTitle </h1></header>
        <div class="row">
            <div class="col-md-8 col-sm-12 col-xs-12 pull-left">
                <section class="term-description">
                    <img src="/Course/Image/@Model.CourseImageName">
                    <h2>@Model.CourseTitle</h2>
                    <p>
                        @Html.Raw(@Model.CourseDescription)
                    </p>
                    
                    @if (!string.IsNullOrEmpty(Model.DemoFileName))
                    {
                        <video style="width: 100%" controls autoplay>
                            <source src="/Course/Demo/@Model.DemoFileName">
                        </video>
                    }
                    <div id="vot"></div>
                    @if (ViewBag.notAccess != null)
                    {
                        <div class="alert alert-info text-center">
                            <h4>کاربر گرامی شما به این بخش دسترسی ندارید.لطفا دوره را خریداری کرده سپس اقدام به دانلود نمایید.</h4>
                        </div>
                    }

                    @if (!IsUserCourse)
                    {
                        <div class="alert alert-info text-center">
                            <h4>برای دانلود بخش های رایگان باید<a class="link" href="/Register">در سایت ثبت نام کنید</a> وبرای دانلود بخش های نقدی باید دوره را خریداری کنید.</h4>
                        </div>
                    }
                    <h2> سرفصل های این دوره : </h2>
                    <ul>
                        @foreach (var item in Model.CourseEpisodes)
                        {


                            <li>
                                @if (item.IsFree || IsUserCourse)
                                {

                                    <h3>
                                        <a href="/DownloadFile/@item.EpisodeId">
                                            @item.EpisodeTitle
                                        </a>
                                    </h3>
                                }
                                else
                                {
                                    <h3>
                                        @item.EpisodeTitle
                                    </h3>
                                }
                                @if (item.IsFree)
                                {
                                    <i> رایگان </i>
                                }
                                else
                                {
                                    <i> نقدی </i>
                                }
                                <span>@item.EpisodeTime</span>
                            </li>


                        }


                    </ul>
                </section>
                <section class="user-comments">
                    <header><h3> نظرات کاربران </h3></header>
                    <div class="inner">

                       
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Course" asp-action="CreateComment"
                                  data-ajax="true"
                                  data-ajax-method="get"
                                  data-ajax-mode="replace"
                                  data-ajax-update="#listComment"
                                  data-ajax-success="Success">
                                <input type="hidden" name="comment.CourseId" value="@Model.CourseId" />
                                <input type="hidden" name="comment.ParentId"   value="@Model.CourseComments" />
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <textarea class="form-control" id="comment_Comment" name="comment.CommentText" placeholder="متن نظر"></textarea>
                                        </div>

                                    </div>
                                    <div class="col-xs-12">
                                        <button type="submit" class="btn btn-success"> ثبت دیدگاه </button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-info text-center">
                                <h4> برای درج نظر باید از طریق این <a href="/Login" class="link">لینک  </a> وارد سایت شوید</h4>
                            </div>
                        }



                        <div class="comment-list" id="listComment">


                        </div>
                    </div>
                </section>
            </div>
            <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">
                <div class="statistics">
                    <ul>
                        <li>
                            <span> مدت دوره </span>
                            @{
                                TimeSpan time = new TimeSpan(Model.CourseEpisodes.Sum(e => e.EpisodeTime.Ticks));
                            }
                            <i> @time </i>
                        </li>
                        <li>
                            <span> تعداد ویدیوها </span>
                            <i> @Model.CourseEpisodes.Count </i>
                        </li>
                        <li>
                            <span> تعداد دانشجوها </span>
                            <i> @Model.UserCourses.Count نفر </i>
                        </li>
                    </ul>
                    @if (Model.CoursePrice != 0 && !IsUserCourse)
                    {
                        <a href="/Course/BuyCourse/@Model.CourseId"> شرکت در دوره : @Model.CoursePrice.ToString("#,0") تومان </a>

                    }
                </div>
                <article class="teacher-info">
                    <img src="/UserAvatar/@Model.User.UserAvatar">
                    <h2> مدرس : @Model.User.UserName </h2>
                    <p>
                        @Model.User.Description
                    </p>
                </article>
                <article class="term-info">
                    <h2> اطلاعات این دوره </h2>
                    <ul>
                        <li>سطح دوره: @Model.CourseLevel.LevelTitle</li>
                        <li>وضعیت دوره: @Model.CourseStatus.StatusTitle</li>
                        @if (Model.CoursePrice != 0)
                        {
                            <li>قیمت : @Model.CoursePrice.ToString("#,0") تومان</li>
                        }
                        else
                        {
                            <li> رایگان </li>
                        }
                        <li>تاریخ ثبت این دوره : @Model.CreateDate.ToStringShamsiDate()</li>
                        <li>آخرین بروزرسانی دوره : @Model.UpdateDate?.ToStringShamsiDate()</li>
                    </ul>
                </article>
                <div class="share-layer">
                    <span> به اشتراک گذاری </span>
                    <a href=""><i class="zmdi zmdi-facebook"></i></a>
                    <a href=""><i class="zmdi zmdi-google-old"></i></a>
                    <a href=""><i class="zmdi zmdi-twitter"></i></a>
                    <a href=""><i class="zmdi zmdi-linkedin"></i></a>
                </div>
                @if (Model.Tags != null)
                {
                    <div class="tags-layer">
                        @foreach (string item in Model.Tags.Split("-", StringSplitOptions.RemoveEmptyEntries))
                        {
                            <a href="/Course?filter=@item"> @item </a>
                        }


                    </div>
                }

            </aside>
        </div>
    </section>
</div>

@section Scripts{



    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script>

        function Success() {
            $("#comment_Comment").val("");
            $("#comment_ParentId").val("");
        }

        //Load Comment
        $(function() {
            $("#listComment").load("/Course/ShowComment/" + @Model.CourseId);
        });


        //Delete Comment
        function Delete(id) {

            $.get("/Course/DeleteComment/" + id).done
            (function() {
                $("#listComment").load("/Course/ShowComment/" + @Model.CourseId);
            });
        }

        function ReplyComment(id) {

            $("#ParentId").val(id);
            $("html, body").delay(1000).animate({ scrollTop: $('#comment_Comment').offset().top }, 1000);

        }

        $(function() {
            $("#vot").load("/Course/CourseVote/@Model.CourseId");
        });

        function Vote(vote) {
            $("#vot").fadeOut("slow");
            $("#vot").load("/Course/AddCourseVote/@(Model.CourseId)?vote=" + vote);
            $("#vot").fadeIn("slow");
        }

    </script>
}

