@model BeastLearn.Application.ViewModels.Courses.ShowCourseViewModel

<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 term-col">
    <article>
        <a href="/ShowCourse/@Model.CourseId" class="img-layer"><img src="/Course/Image/@Model.ImageCourse" @*style="max-width: 300px"*@></a>
        <h2><a href="/ShowCourse/@Model.CourseId"> @Model.Title</a></h2>
        <span> @((Model.Price == 0) ? "رایگان" : Model.Price.ToString("#,0 تومان"))  </span>
        <i>@Model.TotalTime</i>
    </article>
</div>
