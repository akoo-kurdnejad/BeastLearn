@page
@using BeastLearn.Application.Convertors
@model BeastLearn.Web.Pages.Admin.ManageDiscounts.IndexModel
@{
    ViewData["Title"] = "لیست کدهای تخفیف";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">لیست کدهای تخفیف سایت</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                لیست کدها
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <div class="container">
                        <a class="btn btn-outline btn-success" asp-page="CreateDiscount">افزودن کد جدید</a>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    کد تخفیف
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    درصد تخفیف
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    تعدادمجاز
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    تاریخ شروع
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    تاریخ پایان
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    دستورات
                                </th>

                        </thead>

                        <tbody>
                            @foreach (var item in Model.Discounts)
                            {
                                <tr class="gradeA odd">

                                    <td class=" ">@item.DiscountCode</td>
                                    <td class=" "> @item.DiscountPercent</td>
                                    <td class=" "> @item.UsableCount</td>
                                    <td>@((item.StartDate != null) ? item.StartDate.Value.ToStringShamsiDate() : "")</td>
                                    <td>@((item.EndDate != null) ? item.EndDate.Value.ToStringShamsiDate() : "")</td>

                                    <td class="center ">
                                        <a href="/Admin/ManageDiscounts/EditDiscount/@item.DiscountId" class="btn btn-outline btn-warning btn-sm">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <a href="/Admin/ManageDiscounts/DeleteDiscount/@item.DiscountId" class="btn btn-outline btn-danger btn-sm">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>





