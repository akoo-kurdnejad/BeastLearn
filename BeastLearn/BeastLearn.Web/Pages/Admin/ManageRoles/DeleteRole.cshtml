@page "{id}"
@model BeastLearn.Web.Pages.Admin.ManageRoles.DeleteRoleModel
@{
    ViewData["Title"] = "حذف نقش ها";
}

<hr />
<div class="row">
    <form method="post">

        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    حذف نقش
                </div>

                <div class="panel-body">

                    <input type="hidden" asp-for="Roles.RoleId" />
                    <input type="hidden" asp-for="Roles.RoleTitle" />
                    <h2>آیا از حذف نقش "@Model.Roles.RoleTitle" مطمئن هستید؟ </h2>

                    <p>
                        <div class="container">
                            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger btn-block" />
                            <a asp-page="Index" class="btn btn-outline btn-info btn-block">انصراف</a>
                        </div>
                    
                    </p>
                    <div class="form-group">

                    </div>
                </div>

            </div>


        </div>
      
    </form>
</div>



