@page
@model BeastLearn.Web.Pages.Admin.ManageRoles.IndexModel
@{
    ViewData["Title"] = "مدیریت نقش ها";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">لیست نقش ها</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                نقش کاربران
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <div class="container">
                        <a class="btn btn-outline btn-success" href="~/Admin/ManageRoles/CreateRole">افزودن نقش جدید </a>
                    </div>
                </div>

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    عنوان نقش
                                </th>

                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    دستورات
                                </th>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.Roles)
                            {
                                <tr class="gradeA odd">
                                    <td class="sorting_1">@item.RoleTitle</td>

                                    <td class="center ">
                                        <a href="/Admin/ManageRoles/EditRole/@item.RoleId" class="btn btn-outline btn-warning btn-sm">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <a href="/Admin/ManageRoles/DeleteRole/@item.RoleId" class="btn btn-outline btn-danger btn-sm">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



