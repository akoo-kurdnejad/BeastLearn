@page
@model BeastLearn.Web.Pages.Admin.ManageGroups.IndexModel
@{
    ViewData["Title"] = "گروه های سایت";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">لیست گروه ها</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                لیست گروه ها
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <div class="container">
                        <a class="btn btn-outline btn-success" href="~/Admin/ManageGroups/CreateGroup">افزودن سرگروه جدید </a>
                    </div>
                </div>

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    عنوان سرگروه
                                </th>

                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    عنوان زیر گروه
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    دستورات
                                </th>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.CourseGroups.Where(g => g.ParentId == null))
                            {
                                <tr class="gradeA odd">
                                    <td class="sorting_1">@group.GroupTitle</td>
                                    <td>
                                        @if (group.CourseGroups.Any())
                                        {
                                            <ul>
                                                @foreach (var sub in group.CourseGroups)
                                                {
                                                    <li>
                                                        @sub.GroupTitle -    <a href="/Admin/ManageGroups/EditGroup/@sub.GroupID" class="btn btn-outline btn-warning btn-xs">
                                                            <i class="glyphicon glyphicon-edit"></i>
                                                        </a>
                                                        <a href="/Admin/ManageGroups/DeleteGroup/@sub.GroupID" class="btn btn-outline btn-danger btn-xs">
                                                            <i class="glyphicon glyphicon-trash"></i>
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </td>
                                    <td class="center ">
                                        <a href="/Admin/ManageGroups/CreateGroup/@group.GroupID" class="btn btn-info btn-outline btn-sm">
                                            <i class="glyphicon glyphicon-plus"></i>
                                        </a>
                                        <a href="/Admin/ManageGroups/EditGroup/@group.GroupID" class="btn btn-warning btn-outline btn-sm">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <a href="/Admin/ManageGroups/DeleteGroup/@group.GroupID" class="btn btn-danger btn-outline btn-sm">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

