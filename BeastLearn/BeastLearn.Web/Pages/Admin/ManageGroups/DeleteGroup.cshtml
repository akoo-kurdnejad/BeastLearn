@page "{id}"
@model BeastLearn.Web.Pages.Admin.ManageGroups.DeleteGroupModel
@{
    ViewData["Title"] = "حذف گروه";
}


<hr />
<div class="row">
    <form method="post">

        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    حذف گروه
                </div>

                <div class="panel-body">

                    <input type="hidden" asp-for="CourseGroup.GroupID" />
                    <input type="hidden" asp-for="CourseGroup.ParentId" />
                    <input type="hidden" asp-for="CourseGroup.GroupTitle" />
                    <h2>آیا از حذف نقش "@Model.CourseGroup.GroupTitle" مطمئن هستید؟ </h2>

                    <p>
                        <div class="container">
                            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger btn-block" />
                            <a asp-page="Index" class="btn btn-outline btn-info btn-block">انصراف</a>
                        </div>

                    </p>
                    <div class="form-group">

                    </div>
                </div>

            </div>


        </div>

    </form>
</div>

