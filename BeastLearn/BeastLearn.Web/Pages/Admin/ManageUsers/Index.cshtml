@page
@using BeastLearn.Application.Convertors
@model BeastLearn.Web.Pages.Admin.ManageUsers.IndexModel
@{
    ViewData["Title"] = "مدیریت کاربران سایت";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">لیست کاربران سایت</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                لیست کاربران
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <div class="container">
                        <a class="btn btn-outline btn-success" href="~/Admin/ManageUsers/CreateUser">افزودن کاربر جدید</a>
                    </div>
                </div>
                <form>

                    <div class="col-sm-6">
                        <div id="dataTables-example_filter" class="dataTables_filter">
                            <input type="search" name="filterEmail" placeholder="جستجو براساس ایمیل" class="form-control input-sm" aria-controls="dataTables-example" />
                        </div>
                    </div>
                    <div class="col-sm-2 col-md-2">

                        <button type="submit" class="btn btn-outline btn-info">جستجو</button>
                        <a class="btn btn btn-outline btn-default btn-sm" href="/Admin/ManageUsers">خالی کردن</a>

                    </div>

                </form>


            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    نام کاربری
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    ایمیل
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    وضعیت
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    تاریخ ثبت نام
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    دستورات
                                </th>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.UsersForAdmin.Users)
                            {
                                <tr class="gradeA odd">
                                    <td class="sorting_1">@item.UserName</td>
                                    <td class=" ">@item.Email</td>
                                    <td class=" ">
                                        @if (item.IsActive)
                                        {
                                            <p class="text-success">   <i class="glyphicon glyphicon-ok-sign"></i></p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">  <i class="glyphicon glyphicon-remove-sign"></i></p>
                                        }
                                    </td>
                                    <td class="center ">@item.RegisterDate.ToStringShamsiDate()</td>
                                    <td class="center ">
                                        <a href="/Admin/ManageUsers/EditUser/@item.UserId" class="btn btn-warning btn-outline btn-sm">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <a href="/Admin/ManageUsers/DeleteUser/@item.UserId" class="btn btn-danger btn-outline btn-sm">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                <ul class="pagination">
                                    <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                        <a href="#">قبلی</a>
                                        @for (int i = 1; i <= Model.UsersForAdmin.PageCount; i++)
                                        {
                                        <li class="paginate_button @((i==Model.UsersForAdmin.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                            <a href="/Admin/ManageUsers?PageId=@i">@i</a>
                                        </li>
                                    }
                                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
