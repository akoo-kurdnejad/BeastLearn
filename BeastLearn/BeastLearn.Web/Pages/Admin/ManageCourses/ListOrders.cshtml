@page "{id}"
@using BeastLearn.Application.Convertors
@model BeastLearn.Web.Pages.Admin.ManageCourses.ListOrdersModel
@{
    ViewData["Title"] = "ریز فاکتورهای کاربر";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">ریز فاکتورهای کاربر</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="container">
    <div class="user-account">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <section class="user-account-content">

                    <section class="user-account-content">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                لیست فاکتور ها
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="container">
                                    </div>
                                </div>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                                    </div>
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                        <thead>
                                            <tr role="row">
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    شماره فاکتور
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    تاریخ
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    جمع فاکتور
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    پرداخت
                                                </th>
                                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                                    دستورات
                                                </th>

                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model.Orders)
                                            {
                                                <tr class="gradeA odd">

                                                    <td class=" ">@item.OrderId</td>
                                                    <td class=" "> @item.CreateDate.ToStringShamsiDate()</td>
                                                    <td class="center ">@item.OrderSum</td>

                                                    <td>
                                                        @if (item.IsFinaly)
                                                        {
                                                            <p class="text-success">

                                                                <i class="glyphicon glyphicon-ok"></i>
                                                            </p>
                                                        }
                                                        else
                                                        {
                                                            <p class="text-danger">
                                                                <i class="glyphicon glyphicon-remove"></i>

                                                            </p>
                                                        }
                                                    </td>

                                                    <td>
                                                        <a class="btn btn-info btn-outline"><i class="glyphicon glyphicon-bookmark"></i></a>
                                                    </td>
                                                </tr>
                                            }



                                        </tbody>
                                    </table>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </section>

                </section>
            </div>
        </div>
    </div>
</div>


