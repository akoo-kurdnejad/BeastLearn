@page "{id}"
@model BeastLearn.Web.Pages.Admin.ManageCourses.DeleteEpisodeModel
@{
    ViewData["Title"] = "حذف بخش ها";
}


<hr />
<div class="row">
    <form method="post">

        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    حذف بخش
                </div>

                <div class="panel-body">

                    <input type="hidden" asp-for="CourseEpisode.EpisodeId" />
                    <input type="hidden" asp-for="CourseEpisode.CourseId" />
                    <input type="hidden" asp-for="CourseEpisode.EpisodeTime" />
                    <input type="hidden" asp-for="CourseEpisode.EpisodeFileName" />
                    <input type="hidden" asp-for="CourseEpisode.IsFree" />
                    <input type="hidden" asp-for="CourseEpisode.EpisodeTitle" />
                    <h3>آیا از حذف بخش "@Model.CourseEpisode.EpisodeTitle" مطمئن هستید؟ </h3>

                    <p>
                        <div class="container">
                            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger btn-block" />
                            <a asp-page="IndexEpisode" class="btn btn-outline btn-info btn-block">انصراف</a>
                        </div>

                    </p>

                </div>

            </div>


        </div>

    </form>
</div>


