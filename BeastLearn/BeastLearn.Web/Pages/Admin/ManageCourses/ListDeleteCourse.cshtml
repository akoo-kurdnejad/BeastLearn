@page
@using BeastLearn.Application.Convertors
@model BeastLearn.Web.Pages.Admin.ManageCourses.ListDeleteCourseModel
@{
    ViewData["Title"] = "لیست دوره های حذف شده";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">لیست دوره های سایت</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره ها
            </div>
            <br />
            <div class="row">
             
                <form>
                    <div class="col-sm-8" style="margin-right: 10%">
                        <div id="dataTables-example_filter" class="dataTables_filter">
                            <input type="search" name="filterTitle" placeholder="جستجو براساس عنوان دوره" class="form-control input-sm" aria-controls="dataTables-example" />
                        </div>

                    </div>
                    <div class="col-sm-2 col-md-2">

                        <button type="submit" class="btn btn-outline btn-info">جستجو</button>
                        <a class="btn btn btn-outline btn-default btn-sm" href="/Admin/ManageCourses/ListDeleteCourse">خالی کردن</a>

                    </div>

                </form>


            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    تصویر دوره
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    عنوان دوره
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    تعداد جلسات
                                </th>

                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    تاریخ ثبت دوره
                                </th>
                                <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                                    دستورات
                                </th>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.CourseForAdmin.Courses)
                            {
                                <tr class="gradeA odd">
                                    <td>
                                        <img src="~/Course/Image/@item.CourseImageName" class="thumbnail" style="max-width: 120px" />
                                    </td>
                                    <td class=" ">@item.CourseTitle</td>
                                    <td class=" "> @Model.CourseForAdmin.EpisodeCount</td>

                                    <td class="center ">@item.CreateDate.ToStringShamsiDate()</td>
                                    <td class="center ">
                                        <a href="/Admin/ManageCourses/Indexepisode/@item.CourseId" class="btn btn-outline btn-primary btn-sm">
                                            <i class="glyphicon glyphicon-bookmark"></i>
                                        </a>
                                      
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                <ul class="pagination">
                                    <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                        <a href="#">قبلی</a>
                                        @for (int i = 1; i <= Model.CourseForAdmin.PageCount; i++)
                                        {
                                        <li class="paginate_button @((i==Model.CourseForAdmin.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                            <a href="/Admin/ManageUsers?PageId=@i">@i</a>
                                        </li>
                                    }
                                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
