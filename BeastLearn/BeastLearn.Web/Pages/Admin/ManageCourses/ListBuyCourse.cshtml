@page
@using BeastLearn.Application.Convertors
@model BeastLearn.Web.Pages.Admin.ManageCourses.ListBuyCourseModel
@{
    ViewData["Title"] = "لیست دوره های خریداری شده";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">لیست دوره های خریداری شده</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                لیست دوره ها
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">

                </div>

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                        <tr role="row">
                        <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                            تصویر دوره
                        </th>
                        <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                            عنوان دوره
                        </th>
                        <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                            قیمت دوره
                        </th>

                        <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                           تاریخ ثبت دوره
                        </th>
                        <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 164.667px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">
                            دستورات
                        </th>
                        </thead>

                        <tbody>
                        @foreach (var item in Model.Course.Item1)
                        {
                            <tr class="gradeA odd">
                                <td>
                                    <img src="~/Course/Image/@item.ImageName " class="thumbnail" />
                                </td>
                                <td class=" ">@item.Tiltle </td>
                                <td class=" ">@item.Price</td>

                                <td class="center ">@item.CreateDate.ToStringShamsiDate()</td>
                                <td class="center ">
                                    <a href="/Admin/ManageCourses/ListUserBuyCourse/@item.CourseId" class="btn btn-outline btn-info btn-sm">
                                          دانشجویان دوره
                                    </a>

                                </td>
                            </tr>
                        }


                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                            </div>
                        </div>
                        @if (Model.Course.Item2 > 1)
                        {
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                        <a href="#">قبلی</a>
                                        @for (int i = 1; i <= Model.Course.Item2; i++)
                                        {
                                            <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/ManageCourses/ListBuyCourse?PageId=@i">@i</a>
                                            </li>
                                        }
                                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>




